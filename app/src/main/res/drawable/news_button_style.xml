<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/light_gray"/>
            <corners
                android:radius="30dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/light_gray"/>
        </shape>
    </item>

    <item
        android:state_focused="true">
        <shape>
            <solid
                android:color="?attr/fabColor"/>
            <corners
                android:radius="30dp"/>
            <stroke
                android:width="1dp"
                android:color="?attr/fabColor"/>
        </shape>
    </item>
</selector>