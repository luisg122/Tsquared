<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0dp">

        <Button
            android:id="@+id/createGroupButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/group_button_style"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="Create Group"
            android:textSize="12sp"
            android:textColor="@color/mainButton"
            android:textAllCaps="false"
            android:drawableLeft="@drawable/ic_group_create"
            android:drawableStart="@drawable/ic_group_create"/>

        <Button
            android:id="@+id/postToGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/createGroupButton"
            android:layout_toRightOf="@+id/createGroupButton"
            android:background="@drawable/group_button_style"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:text="Post to Group"
            android:textAllCaps="false"
            android:textColor="@color/mainButton"
            android:textSize="12sp"
            android:drawableLeft="@drawable/ic_group_post"
            android:drawableStart="@drawable/ic_group_post"/>

        <View
            android:id="@+id/tile_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/postToGroup"
            android:background="@drawable/line_divider_black"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="0dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>