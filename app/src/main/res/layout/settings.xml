<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/appBarColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/settingsScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="true"
        android:scrollbars="none"
        android:layout_marginTop="?actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="?attr/lightTextColor"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginVertical="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/cardBackgroundColor">

                <RelativeLayout
                    android:id="@+id/profile_infoTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="UnusedAttribute">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile Information"
                        android:textSize="14sp"
                        android:textColor="?attr/lightTextColor"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_right_arrow"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/account_settingTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="UnusedAttribute">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Settings"
                        android:textSize="14sp"
                        android:textColor="?attr/lightTextColor"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_right_arrow"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/notifications_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="UnusedAttribute">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:textSize="14sp"
                        android:textColor="?attr/lightTextColor"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_right_arrow"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/signOutTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="UnusedAttribute">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign Out"
                        android:textSize="14sp"
                        android:textColor="?attr/lightTextColor"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_right_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Support"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="?attr/lightTextColor"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginVertical="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/cardBackgroundColor">

                <RelativeLayout
                    android:id="@+id/rateTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="UnusedAttribute">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate Us"
                        android:textSize="14sp"
                        android:textColor="?attr/lightTextColor"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_right_arrow"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/suggestionTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="UnusedAttribute">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Suggest Improvement"
                        android:textSize="14sp"
                        android:textColor="?attr/lightTextColor"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_right_arrow"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/helpTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="UnusedAttribute">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help Center"
                        android:textSize="14sp"
                        android:textColor="?attr/lightTextColor"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_right_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legal"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="15sp"
                android:textColor="?attr/lightTextColor"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginVertical="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="?attr/cardBackgroundColor">

                <RelativeLayout
                    android:id="@+id/termsAndServicesTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="UnusedAttribute">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms of Service"
                        android:textSize="14sp"
                        android:textColor="?attr/lightTextColor"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_right_arrow"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/privacyPolicyTab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    tools:ignore="UnusedAttribute">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        android:textSize="14sp"
                        android:textColor="?attr/lightTextColor"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        app:srcCompat="@drawable/ic_right_arrow"/>
                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/DeleteAccount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:background="?attr/cardBackgroundColor"
                tools:ignore="UnusedAttribute">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete Account"
                    android:textSize="14sp"
                    android:textColor="@color/crimsonRed"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_right_arrow"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp">
                <TextView
                    android:id="@+id/appVersionID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TSquared v1.0.0"
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:textColor="?attr/lightTextColor"/>

                <TextView
                    android:id="@+id/copyRightInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="© 2021 TSquared Inc."
                    android:textSize="12sp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/appVersionID"
                    android:layout_marginTop="5dp"
                    android:textColor="?attr/lightTextColor"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>