<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/siteOfNews"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/webViewCardColor"
        app:titleTextColor="?attr/textColor"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:indeterminate="true"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?actionBarSize"
            app:layout_constraintBottom_toTopOf="@+id/buttonsSection"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/buttonsSection"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="0dp"
            app:cardElevation="30dp"
            app:cardBackgroundColor="?attr/webViewCardColor">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp">

                    <ImageButton
                        android:id="@+id/likedButton"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/left_half_button"
                        android:elevation="0dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/upvote_white"/>

                    <ImageButton
                        android:id="@+id/disButton"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:layout_toEndOf="@+id/likedButton"
                        android:layout_toRightOf="@+id/likedButton"
                        android:background="@drawable/right_half_button"
                        android:elevation="0dp"
                        android:padding="5dp"
                        app:srcCompat="@drawable/downvote_white" />

                </RelativeLayout>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    app:backgroundTint="?attr/fabColor"
                    app:elevation="0dp"
                    app:fabSize="mini"
                    app:icon="@drawable/ic_comment"
                    app:srcCompat="@drawable/ic_comment" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>