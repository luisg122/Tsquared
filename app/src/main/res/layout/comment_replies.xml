<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/appBarColor"
        app:titleTextColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="?attr/cardBackgroundColor">

                <ImageView
                    android:id="@+id/threeDots"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/commentContent"
                    app:srcCompat="@drawable/ic_more_vert" />

                <ImageView
                    android:id="@+id/reply"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="fitXY"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toStartOf="@+id/threeDots"
                    app:layout_constraintTop_toBottomOf="@+id/commentContent"
                    app:srcCompat="@drawable/ic_reply_24" />


                <ImageView
                    android:id="@+id/upVote"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="65dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/commentContent"
                    app:srcCompat="@drawable/up_vote_vec" />

                <ImageView
                    android:id="@+id/downVote"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/upVote"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintStart_toEndOf="@+id/numberOfUpVotes"
                    app:layout_constraintTop_toBottomOf="@+id/commentContent"
                    app:srcCompat="@drawable/down_vote_vec" />

                <ImageView
                    android:id="@+id/subComments"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/upVote"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="12dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="2dp"
                    app:layout_constraintStart_toEndOf="@+id/downVote"
                    app:layout_constraintTop_toBottomOf="@+id/commentContent"
                    app:srcCompat="@drawable/ic_comments_sub" />

                <TextView
                    android:id="@+id/numberOfReplies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="13dp"
                    android:text="3"
                    android:textColor="?attr/lightTextColor"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/subComments"
                    app:layout_constraintTop_toBottomOf="@+id/commentContent"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/commentContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="65dp"
                    android:layout_marginLeft="65dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:ems="10"

                    android:gravity="start|top"
                    android:lineSpacingExtra="3dp"
                    android:maxLines="100"
                    android:minLines="1"
                    android:singleLine="false"
                    android:text="Scrum is an agile process framework for managing complex knowledge work in Software Development"
                    android:textColor="?attr/lightTextColor"
                    android:textSize="14sp"

                    app:fontFamily="sans-serif"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/commentSubmitted" />

                <TextView
                    android:id="@+id/commentName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="15dp"
                    android:text="Brian Doe"
                    android:textColor="?attr/lightTextColor"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/commentIV"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/numberOfUpVotes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="13dp"
                    android:text="15"
                    android:textColor="?attr/lightTextColor"
                    android:textSize="10sp"
                    app:layout_constraintStart_toEndOf="@+id/upVote"
                    app:layout_constraintTop_toBottomOf="@+id/commentContent"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/commentSubmitted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginRight="24dp"
                    android:text="12/6/2019"
                    android:textColor="?attr/lightTextColor"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="SmallSp" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/commentIV"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/blank_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/postReplyPrompt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/postCommentIV"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@mipmap/blank_profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/promptComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Post a reply . . ."
                    android:textColor="?attr/lightTextColor"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    app:fontFamily="sans-serif"
                    app:layout_constraintStart_toEndOf="@+id/postCommentIV"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <View
                    android:id="@+id/lineDiv"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/promptComment"
                    android:background="@drawable/line_divider_black" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/replies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>