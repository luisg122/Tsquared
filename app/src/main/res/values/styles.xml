<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Switch_style" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- For the Control Switch toggle -->
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">#94e5ff</item>
        <!-- Inactive thumb color, stick with the default color of the widget -->
    </style>

    <!-- Theme of the toolbar mostly used in all activities of the app -->
    <style name="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Styling/customizing the Toolbar -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">monospace</item>
    </style>

    <!-- Styling/customizing the TabLayout -->
    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">serif-monospace</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Styling/customizing the searchView -->
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <!--<item name="android:textSize">35sp</item>-->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyAlertDialogTheme" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/round_border</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#ffffff</item>
        <item name="boxStrokeColor">#94e5ff</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#94e5ff</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
