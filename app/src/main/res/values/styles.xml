<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Switch_style" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- For the Control Switch toggle -->
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">#94e5ff</item>
        <!-- Inactive thumb color, stick with the default color of the widget -->
    </style>

    <!-- Theme of the toolbar mostly used in all activities of the app -->
    <style name="AppTheme.NoActionBar">
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="commentsSecColor">@color/lightCommentsCardColor</item>
        <item name="webViewCardColor">@color/lightCardColor</item>
        <item name="textColor">@color/black</item>
        <item name="lightTextColor">@color/dark_gray</item>
        <item name="fabColor">@color/fabColorDay</item>
        <item name="bottomSheetColor">@color/mainColor</item>
        <item name="iconLayoutColor">@color/tabSelected</item>
        <item name="appBarColor">@color/mainColor</item>
        <item name="lineDividerColor">@color/light_gray</item>
        <item name="ideasPrompt">@color/ideasPrompt</item>
        <item name="tintDrawableColor">@color/black</item>
        <item name="moonColor">@color/dark_gray</item>
        <item name="bubbleItemColor">@color/light_gray</item>
        <item name="textCategoryColor">@color/DarkTopicColor</item>

        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="navigationColorBackground">@color/navigationLight</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>

        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
    </style>

    <!-- Night Mode -->
    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/darkMainColor</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/darkWindowBackground</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>
        <item name="cardBackgroundColor">@color/darkCardBackground</item>
        <item name="commentsSecColor">@color/darkCommentsCardColor</item>
        <item name="webViewCardColor">@color/darkCardBackground</item>
        <item name="textColor">@color/white</item>
        <item name="lightTextColor">@color/light_gray</item>
        <item name="fabColor">@color/mainColor</item>
        <item name="bottomSheetColor">@color/darkMainColor</item>
        <item name="appBarColor">@color/darkMainColor</item>
        <item name="iconLayoutColor">@color/tabSelectedDark</item>
        <item name="lineDividerColor">@color/darkCommentsCardColor</item>
        <item name="ideasPrompt">@color/ideasPromptDark</item>
        <item name="tintDrawableColor">@color/white</item>
        <item name="moonColor">@color/moonColorYellow</item>
        <item name="bubbleItemColor">@color/darkWindowBackground</item>
        <item name="textCategoryColor">@color/light_gray</item>

        <item name="colorNavigationItem">@color/menu_item_color_state</item>
        <item name="colorNavigationItemSelected">@color/white</item>
        <item name="navigationColorBackground">@color/navigationDark</item>
        <item name="drawableNavigationItemBackground">@drawable/menu_background_color_state</item>

        <item name="android:actionOverflowButtonStyle">@style/ActionButtonOverflow</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">?attr/colorNavigationItem</item>
        <item name="itemTextColor">?attr/colorNavigationItem</item>
        <item name="itemBackground">?attr/drawableNavigationItemBackground</item>
    </style>

    <style name="DialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>
    </style>

    <style name="ActionButtonOverflow" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Defined a new style with three items of color. -->
    <style name="AnswerWithImagesTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/veryDarkGray</item>
    </style>

    <style name="Following_Followers" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/veryDarkGray</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/customActivityAnimation</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/veryDarkGray</item>
    </style>

    <!-- Styling/customizing the Toolbar -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
    </style>

    <!-- Styling/customizing the TabLayout -->
    <style name="TabLayoutStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Styling/customizing the TabLayout -->
    <style name="TabLayoutStyle2" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Styling/customizing the searchView -->
    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:textCursorDrawable">@drawable/cursor_color_white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/round_border</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Expanded" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Base.TextAppearance.MaterialComponents.Button" parent="TextAppearance.AppCompat.Button">
        <!-- Fake Roboto Medium. -->
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">13sp</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.0892857143</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Button" parent="Base.TextAppearance.MaterialComponents.Button"/>
    
    <style name="backgroundSplash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FFFFFF</item>
        <item name="colorControlHighlight">#FFFFFF</item>
    </style>

    <style name="LogInActivateLine">
        <!-- for login page -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/mainButton</item>
    </style>

    <style name="LinkLine">
        <!-- for login page -->
        <item name="colorControlNormal">?attr/lightTextColor</item>
        <item name="colorControlActivated">@color/lightPurple</item>
    </style>

    <style name="MyDatePickerStyle"
        parent="@android:style/Widget.Material.Light.DatePicker"
        tools:targetApi="lollipop">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:colorControlNormal">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:colorAccent">@color/white</item>
    </style>

    <style name="customActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/mainButton</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/mainButton</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="error_appearance1" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="backgroundColorForSignIn" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimaryDark">@color/mainColor</item>
        <item name="android:windowBackground">@color/mainColor</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="signInBackground" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/sign_in_background</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
    </style>

    <style name="MyMaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Add attributes here -->
        <item name="colorPrimary">@color/mainColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>

    <!--To fix rendering in preview -->
    <style name="AppTextAppearance.Button" parent="Theme.MaterialComponents">
        <item name="android:textAllCaps">false</item>
    </style>
</resources>